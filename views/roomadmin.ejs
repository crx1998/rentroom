<script>
    var bootstrapButton = $.fn.button.noConflict() // return $.fn.button to previously assigned value
    $.fn.bootstrapBtn = bootstrapButton
    $.ajax({
        "url":"/getroomtype",
        // "type":"jsonp",
        "success":function(data){
            var data=data.data
            var obj = {
                width: "100%",
                height: 400,
                title: "房间类型",
                resizable: true,
                draggable: false,
                dataModel: {
                    data: data
                },
                selectionModel: { type: 'none', subtype:'incr', cbHeader:true, cbAll:true},
                pageModel: { type: "local", rPP:5, strRpp: "{0}", strDisplay: "{0} to {1} of {2}" ,rPPOptions:[5,10,15]},
                colModel: [
                    // { title: "房间号", dataIndx: "roomnumber", width: 80,align: "center",},
                    { title: "房间类型", dataIndx: "roomtypename", width: 120,align: "center",},
                    { title: "面积", dataIndx: "roomtypearea", dataType: "number", width: 80,align: "center",},
                    { title: "床位数", dataIndx: "bednum", dataType: "number" },
                    { title: "早餐", dataIndx: "breakfast", dataType: "string" },
                    { title: "网络", dataIndx: "wifi", dataType: "string" },
                    { title: "电视", dataIndx: "television", dataType: "string" },
                    { title: "价格", dataIndx: "money", dataType: "number" , width: 80,align: "center",},
                    { title: "房间数量", dataIndx: "roomnum", dataType: "number" },
                    { title: "剩余数量", dataIndx: "lastnum", dataType: "number"},
                    {title: "", dataIndx: "state",align: "center",
                        cb: { header: true, all: false },
                        type: 'checkBoxSelection', cls: 'ui-state-default', resizable: false, sortable: false, editable: false
                    }
                ],
                cellSave: function (event, ui) {
                    // ui.rowData能够拿到这一行的全部数据！
                    $.get("/updataroom", ui.rowData, function (data) {
                        if(data.result == -1){
                            alert("不好意思服务器出错了")
                        }else if(data.result == 1){
                            alert("修改成功")
                        }
                    });
                },
                toolbar: {
                    items: [{
                        type: 'button',
                        label: '删除所选项',
                        listeners: [{ 'click': function () {
                                var $grid = $(this).closest('.pq-grid'),
                                    selarray = $grid.pqGrid('selection', { type: 'row', method: 'getSelection' }),
                                    ids = [];
                                for (var i = 0, len = selarray.length; i < len; i++) {
                                    var rowData = selarray[i].rowData;
                                    console.log(selarray[0])
                                    ids.push(rowData._id);
                                }
                                $.get("/del/"+ids,function (data) {
                                    window.location="/roomadmin"
                                })
                                alert(ids);
                            }
                        }]
                    },
                    ]
                }
            }
            var $grid=$("#grid_selection_checkbox").pqGrid(obj);
        }
    })






</script>

